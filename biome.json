{
  "$schema": "https://biomejs.dev/schemas/1.6.1/schema.json",
  "files": {
    "maxSize": 50000000,
    "ignore": ["dist"]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "useKeyWithClickEvents": "off"
      },
      "style": {
        "noUselessElse": "off",
        "useImportType": "off",
        "useNodejsImportProtocol": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space",
    "lineWidth": 120
  },
  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    },
    "formatter": {
      "enabled": true,
      "semicolons": "asNeeded",
      "quoteStyle": "single"
    }
  }
}
